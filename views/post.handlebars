<main class="main-content">
    <div class="container">
        <article>
            <h2>{{post.title}}</h2>
            <p>{{post.content}}</p>
            <p>Posted by {{post.user.name}} on {{post.createdAt}}</p>
        </article>

        <section class="comments-section">
            <h3>Comments</h3>
            {{#if post.comments}}
                <ul>
                    {{#each post.comments}}
                        <li>
                            {{this.content}}
                            Posted by {{this.user.name}} on {{this.createdAt}}
                        </li> 
                    {{/each}}
                </ul>
            {{else}}
                <p>No comments yet.</p>
            {{/if}}
        </section>
    </div>
</main>