<section>
    <div class="container">
        <h3>Dashboard</h3>
        <div class="posts-container">
            {{#if posts}}
                {{#each posts}}
                        <article>
                            <h3>{{title}}</h3>
                            <p>{{content}}</p>
                            <p>Posted on {{createdAt}} </p>
                            <div class="post-actions">
                                <button class="btn edit-btn">Edit</button>
                                <button class="btn delete-btn">Delete</button>
                            </div>
                        </article>
                {{/each}}
            {{else}}
                <p>No posts found.</p>
            {{/if}}
        </div>
    </div>
</section>