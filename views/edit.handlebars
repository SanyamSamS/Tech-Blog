    <div class="container posts-container">
        <article>
            <h3>Edit your post:</h3>

            <form class="form edit-post-form"> 
                <input type="hidden" id="post-id" value="{{post.id}}">
                <div class="form-group">
                    <label for="post-title">Post title</label>
                    <input class="form-input" type="text" id="post-title" name="title" value="{{post.title}}" /> <!-- Updated ID and name -->
                </div>
                <div class="form-group">
                    <label for="post-content">Content:</label>
                    <textarea class="form-input" id="post-content" name="content">{{post.content}}</textarea> <!-- Updated ID and name -->
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </form>
        </article>
    </div>
</div>
<script src="/js/edit.js"></script> 
